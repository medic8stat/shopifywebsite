      "settings": {
        "title": "What to Expect",
        "heading_font_size": "heading-medium",
        "align_heading": "text-center",
        "align_text": "text-center",
        "icon_alignment": "icon--top",
        "width": "wrapper",
        "align_columns": "flex-align-top",
