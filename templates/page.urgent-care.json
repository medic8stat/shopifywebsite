    "section-text-row-features": {
      "type": "section-text-row",
      "blocks": {
        "icon": {
          "type": "icon",
          "settings": {
            "icon_name": "icon-clock",
            "icon_size": 50,
            "icon_color": "#1E3A5F",
            "title": "Walk-In, No Appointment",
            "heading_font_size": "heading-x-small",
            "text": "<p>Simply walk in during clinic hours. Our team will see you as quickly as possible — no appointment needed for urgent care visits.</p>",
            "text_font_size": "body-small",
            "heading_tag": "automatic"
          }
        },
        "icon-0": {
          "type": "icon",
          "settings": {
            "icon_name": "icon-heart",
            "icon_size": 50,
            "icon_color": "#1E3A5F",
            "title": "Covered by NB Medicare",
            "heading_font_size": "heading-x-small",
            "text": "<p>New Brunswick residents can access urgent care services covered by Medicare. No out-of-pocket costs for eligible visits.</p>",
            "text_font_size": "body-small",
            "heading_tag": "automatic"
          }
        },
        "icon-1": {
          "type": "icon",
          "settings": {
            "icon_name": "icon-award",
            "icon_size": 50,
            "icon_color": "#1E3A5F",
